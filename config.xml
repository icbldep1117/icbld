<?xml version='1.0' encoding='utf-8'?>
<widget id="com.insidecoach.app" version="1.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Inside Coach</name>
    <description>Inside Coach App</description>
    <author email="info@insidecoach.com" href="https://build.phonegap.com">Inside Coach</author>
    <content src="index.html" />
    <preference name="android-minSdkVersion" value="14" />
    <icon src="www/images/icon.png" />
	<icon src="www/images/icon40.png" gap:platform="ios" width="40" height="40" />	
	<icon src="www/images/icon76.png" gap:platform="ios" width="76" height="76" />
	<icon src="www/images/icon120.png" gap:platform="ios" width="120" height="120" />	
	<icon src="www/images/icon152.png" gap:platform="ios" width="152" height="152" />
    <access origin="*" />
    <preference name="exit-on-suspend" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AllowInlineMediaPlayback" value="true" />
</widget>
